{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Company Registration V1",
    "description": "Schema for registering a new shell company with sovereign identity",
    "type": "object",
    "required": [
        "company_id",
        "company_name",
        "founding_capital_usd",
        "incorporation_timestamp",
        "industry_sector",
        "sovereign_signature",
        "merkle_genesis_hash"
    ],
    "properties": {
        "company_id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for this company"
        },
        "company_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Legal name of the company"
        },
        "founding_capital_usd": {
            "type": "number",
            "minimum": 0,
            "description": "Initial capital investment in USD"
        },
        "incorporation_timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of company incorporation"
        },
        "industry_sector": {
            "type": "string",
            "enum": [
                "TECH",
                "MANUFACTURING",
                "SERVICES",
                "FINANCE",
                "RETAIL",
                "ENERGY"
            ],
            "description": "Primary industry sector"
        },
        "sovereign_signature": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 cryptographic signature of company owner's identity"
        },
        "merkle_genesis_hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 hash of the first transaction in company's ledger (genesis block)"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "founder_name": {
                    "type": "string",
                    "description": "Name of company founder (optional)"
                },
                "headquarters_location": {
                    "type": "string",
                    "description": "Geographic location (optional)"
                },
                "mission_statement": {
                    "type": "string",
                    "maxLength": 500,
                    "description": "Company mission or vision (optional)"
                }
            },
            "description": "Optional metadata about the company"
        }
    }
}